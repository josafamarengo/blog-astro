---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";

export interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<a
  href={!post.data.planned ? `/blog/${post.slug}/` : null}
  class={`space-y-2 flex flex-col items-start rounded-lg p-5 bg-zinc-50 shadow shadow-zinc-500 hover:bg-zinc-200 dark:bg-zinc-800 dark:hover:bg-zinc-700 dark:shadow-none`}
>
  <div class="space-y-1">
    {post.data.tags.map((tag) => <span class="font-semibold uppercase text-xs bg-zinc-800 dark:bg-zinc-200 dark:text-black text-white px-1 rounded">{tag}</span>)}
    <div class="flex items-center space-x-2">
      <h2 class="text-xl text-black dark:text-white font-bold">{post.data.title}</h2>
      {
        post.data.planned && (
          <span class="flex items-center justify-center p-0.5 px-1.5 bg-amber-500 rounded-full text-black font-black text-xs">
            Em breve
          </span>
        )
      }
    </div>
    <!--<div class="flex flex-col">
      <span class="flex items-center space-x-1 text-xs font-normal uppercase">
        <FormattedDate date={post.data.pubDate} />
      </span>
    </div>-->
  </div>
  <p class="font-light">{post.data.description}</p>
</a>
