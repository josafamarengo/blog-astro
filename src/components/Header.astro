import Hero from "./Hero.astro";
---

<header class="hidden p-4 fixed top-0 left-0 right-0 z-50 md:block bg-slate-50 dark:bg-slate-950">
  <div class="container mx-auto md:max-w-4xl flex justify-between items-center">
    <a href="/" class="text-2xl font-bold text-slate-900 dark:text-slate-100">
