---
import MdiLinkedin from "~icons/mdi/linkedin";
import MdiGithub from "~icons/mdi/github";
import MdiRss from "~icons/mdi/rss";
import MdiYoutube from "~icons/mdi/youtube";

const today = new Date();
---

<footer class="flex flex-col items-center justify-between py-16 space-y-8">
  <div class="flex items-center space-x-2">
    <a
      href="https://linkedin.com/in/josafamarengo"
      target="_blank"
      class="w-8 h-8 flex items-center justify-center rounded-md p-1.5 hover:bg-zinc-300 dark:hover:bg-zinc-800"
    >
      <MdiLinkedin />
      <span class="sr-only">Linkedin</span>
    </a>
    <a
      href="https://github.com/josafamarengo"
      target="_blank"
      class="w-8 h-8 flex items-center justify-center rounded-md p-1.5 hover:bg-slate-300 dark:hover:bg-slate-800"
    >
      <MdiGithub />
      <span class="sr-only">Github</span>
    </a>
    <a
      href="https://youtube.com/@josafa.marengo"
      target="_blank"
      class="w-8 h-8 flex items-center justify-center rounded-md p-1.5 hover:bg-slate-300 dark:hover:bg-slate-800"
    >
      <MdiYoutube />
      <span class="sr-only">Youtube</span>
    </a>
    <a
      href="/rss.xml"
      target="_blank"
      class="w-8 h-8 flex items-center justify-center rounded-md p-1.5 hover:bg-slate-300 dark:hover:bg-slate-800"
    >
      <MdiRss />
      <span class="sr-only">RSS</span>
    </a>
  </div>
  <p class="text-sm">&copy; {today.getFullYear()} Josaf√° Marengo</p>
</footer>
