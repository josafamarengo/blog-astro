---
import Down from "~icons/material-symbols/chevron-left-rounded"

const { name } = Astro.props;
---
<li class="relative group">
      <button
        type="button"
        class="inline-flex items-center justify-center w-full px-4 py-2 text-sm group-hover:bg-zinc-100 rounded-t-lg"
        id="options-menu"
        aria-expanded="true"
        aria-haspopup="true"
      >
        <span>{name}</span>
        <Down class="ml-2 w-5 h-5 -rotate-90 group-hover:rotate-90 transition-rotate duration-300 ease-in-out" />
      </button>
      <div
        class="
              hidden
              group-hover:block
              absolute
              z-10
              w-56
              rounded-b-lg rounded-tr-lg
              origin-top-right
              bg-zinc-100
              overflow-hidden 
              shadow-lg 
            "
        role="menu"
        aria-orientation="vertical"
        aria-labelledby="options-menu"
      >
        <div class="py-1">
          <slot />
        </div>
      </div>
    </li>